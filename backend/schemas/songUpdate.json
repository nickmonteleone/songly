{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.playlist.com/songUpdate.schema.json",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "artist": {
      "type": "integer",
      "minimum": 0
    },
    "link": {
      "type": "string",
      "pattern": "0|(0?\\.[0-9]+)"
    }
  },
  "additionalProperties": false,
  "required": [
    "title"
  ]
}
